<!-- File: res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/DiscoOrario.png" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disco Orario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"

        />


    <Button
        android:id="@+id/setDurationButton"
        android:layout_width="194dp"
        android:layout_height="124dp"
        android:layout_below="@id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="199dp"
        android:layout_toStartOf="@+id/formatCheckBox"
        android:backgroundTint="#FFFFFF"

        android:text="Imposta Durata" />

    <CheckBox
        android:id="@+id/formatCheckBox"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="194dp"
        android:background="#FFFFFF"
        android:checked="true"
        android:text="Formato 24 ore" />

    <TextView
        android:id="@+id/timeRemainingTextView"
        android:layout_width="175dp"
        android:layout_height="112dp"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="1dp"
        android:text="Tempo rimanente: "
        android:textStyle="bold" />


    <Button
        android:id="@+id/parkButton"
        android:layout_width="205dp"
        android:layout_height="98.75dp"
        android:layout_alignEnd="@+id/showMapButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="221dp"
        android:backgroundTint="#FFFFFF"
        android:text="Park Car" />

    <Button
        android:id="@+id/showMapButton"
        android:layout_width="205dp"
        android:layout_height="98.75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FFFFFF"
        android:text="Show on Map" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="385dp"
        android:layout_height="129dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FFFFFF"
        android:text="Exit" />
</RelativeLayout>