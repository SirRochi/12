<!-- File: res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Altri elementi del layout -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disco Orario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/setDurationButton"
        android:layout_width="194dp"
        android:layout_height="124dp"
        android:layout_below="@id/titleTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="199dp"
        android:layout_toStartOf="@+id/formatCheckBox"

        android:text="Imposta Durata" />

    <CheckBox
        android:id="@+id/formatCheckBox"
        android:layout_width="205dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="234dp"
        android:checked="true"
        android:text="Formato 24 ore" />

    <TextView
        android:id="@+id/timeRemainingTextView"
        android:layout_width="175dp"
        android:layout_height="112dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="1dp"
        android:text="Tempo rimanente: "
         />

    <Button
        android:id="@+id/parkButton"
        android:layout_width="216dp"
        android:layout_height="114dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="230dp"
        android:backgroundTint="#00FF00"
        android:text="Park Car" />

    <Button
        android:id="@+id/showMapButton"
        android:layout_width="204dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="11dp"
        android:backgroundTint="#00FF00"

        android:text="Show on Map" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="389dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|bottom"
        android:layout_marginTop="442dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#FFFFFF"
        android:text="Exit"
        android:textColor="#FF0000" />
</RelativeLayout>